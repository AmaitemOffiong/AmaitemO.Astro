<style>
    /* Header Section Styles */
    #pageheader 
    {
        background-color: black;
        height:7.0rem;
    }
    /* Special Header Container Styles */
    #pageheader .container 
    {
        background-color: rgb(0, 0, 0);
        border:2px dashed red;
        display:flex;
        justify-content: space-between;
        align-items: center;
        height:100%;
        padding: 0 2rem 0 2rem;
    }
    
    .logo img 
    {
        height:6rem;
    }
    
    .logo:hover
    {
        animation-name: swim;
        animation-duration:.5s;
        animation-iteration-count: infinite;
        animation-direction: alternate;
        animation-timing-function: linear;
    }
    
    @keyframes swim 
    {
        0%{transform:rotate(0deg);}
        100%{transform:rotate(45deg);}
    }
    
    /* Header Menu */
    #menu {
        background-color: #ffffff; /* Light gray background */
        border: 4px solid silver; /* Red border */
        display: flex;
        justify-content: space-between;
        width: 30rem; /* 200px */
        padding: 5px;
        border-radius: 70px; /* Round corners */
        box-shadow:0px 0px 10px white;/* Soft shadow */
    }
    
    #menu li a {
        text-decoration:double; /* Remove underline */
        padding: 0px 12px; /* Padding for the menu items */
        border-radius: 20px; /* Round corners */
        background-color: #fff; /* White background */
        transition: 0.1s, color 0.1s; /* Smooth color transition */
    }
    
    #menu li a:hover {
        background-color: #151515; /* Red background on hover */
        color: #c50c0c; /* White text on hover */
       
    
    }
    /* End of Header Section Styles */
    
</style>